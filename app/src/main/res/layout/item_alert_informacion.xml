<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nombreEstacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esso"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_margin="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_direccionEstacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oelo"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_verEstacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/textWhite"
            android:drawableLeft="@drawable/ic_ver_estacion"
            android:paddingLeft="5dp"
            android:text="Ver estaciÃ³n"
            android:textColor="@color/color_verde"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_ver_estacion"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_generarRuta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_verde"
            android:drawableLeft="@drawable/ic_rutas"
            android:paddingLeft="5dp"
            android:text="Generar ruta"
            android:textColor="@color/textWhite"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_rutas" />

    </LinearLayout>

</LinearLayout>